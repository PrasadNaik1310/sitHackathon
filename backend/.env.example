# ─── Database ───────────────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/gst_credit_db
SYNC_DATABASE_URL=postgresql://postgres:password@localhost:5432/gst_credit_db

# ─── JWT ─────────────────────────────────────────────────────────────────────
SECRET_KEY=super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ─── Government Sandbox API ──────────────────────────────────────────────────
GOV_API_BASE_URL=https://sandbox.gov.in/api/v1
GOV_API_KEY=your-gov-api-key-here
GOV_API_SECRET=your-gov-api-secret-here
GOV_API_TIMEOUT=10
GOV_CACHE_TTL_SECONDS=3600

# ─── Credit Scoring ──────────────────────────────────────────────────────────
EXTERNAL_SCORE_WEIGHT=0.6
INTERNAL_SCORE_WEIGHT=0.4

# ─── Exposure Caps ───────────────────────────────────────────────────────────
PER_USER_EXPOSURE_CAP=10000000
PER_GST_EXPOSURE_CAP=25000000
PORTFOLIO_CAP=500000000

# ─── Rate Limiting ───────────────────────────────────────────────────────────
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW_SECONDS=60

# ─── Application ─────────────────────────────────────────────────────────────
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=INFO
